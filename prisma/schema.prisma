generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("TEST_DATABASE_URL")
}

model Characters {
  id          Int    @id @default(autoincrement())
  settingid   Int
  charid      Int
  charname    String
  imglocation String
  xpercent    Float?
  ypercent    Float?

  @@unique([settingid, charid])
}

model Settings {
  id          Int    @id @default(autoincrement())
  settingid   Int
  name        String @unique
  imglocation String
  difficulty  String
  credits     String
}

model Leaderboards {
  id          Int    @id @default(autoincrement())
  userName    String
  timeTaken   String
  timeStamp   DateTime @default(now())
  settingName String
}
